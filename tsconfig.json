{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "awesomeTypescriptLoaderOptions": {
      "useWebpackText": true
    },
    "baseUrl": ".",
    "paths": {
      "*": [
        "source/types/*",
        "node_modules/@types/*",
        "*"
      ]
    }
  },
  "exclude": [
    "*.html",
    "node_modules"
  ],
  "files": [
    "source/index.ts"
  ]
}
